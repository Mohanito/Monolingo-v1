<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Monolingo</title>
    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Raleway:wght@400;500;600;700&display=swap" rel="stylesheet">
    
</head>

<body class="d-flex flex-column min-vh-100 bg-dark text-white">
    <main class="d-flex container-fluid justify-content-center p-0">
        <div class="row container-fluid row-cols-1 row-cols-md-2 p-0" id="video-list">
            <div class="col p-0">
                <div class="card border-0">
                    <div class="card-img-overlay p-0">
                        <h5 class="title-overlay card-title p-2">
                            <%= username %> - Speaks <%= language %>
                        </h5>
                        <p class="position-absolute bottom-0 p-1" id="subtitle" style="background-color: rgba(0, 0, 0, 0.5);">Subtitles placeholder</p>
                    </div>
                    <video id="videoElement" autoplay="true" style="background-color: black; width: 100%; height: auto;"></video>
                </div>
            </div>
            <div class="col waiting-for-user" id="waiting-for-user">
                <h6>Waiting for other users to join...</h6>
                <small>Invite your friend: <%= roomId %></small>
            </div>
        </div>
    </main>

    <div class="row container-fluid p-0">
        <div class="col-4">
            <div class="p-3">
                <h3>Monolingo Chatroom</h3>
                <small class="text-center text-muted">Invite your friend: <%= roomId %></small>
                <h6 class="text-center mt-3">Click or Press Space to Start Speaking</h6>
                <div class="d-flex container justify-content-center mt-3">
                    <button id="record" class="btn btn-success">Start Speaking</button>
                </div>
                <select class="form-select" name="voiceSelect" id="voiceSelect">

                </select>
            </div>
        </div>
        <div class="col-8">
            <h5 class="text-center mt-3">Message Board</h5>
            <div class="container border border-light rounded" tabindex="0" style="overflow-y: scroll; height: 200px;" id="message-board">
                <!-- Messages -->
            </div>
        </div>
    </div>
    <footer class="footer my-3 text-center">
        <span class="text-muted">&copy;Monolingo 2021</span>
        <a class="ms-3 text-muted" href="/">Back to Homepage</a>
    </footer>
    

    <script src="/socket.io/socket.io.js"></script>
    <script src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"></script>

    <script>
        const roomId = "<%= roomId %>";
        const myUsername = "<%= username %>";
        const myLanguage = "<%= language %>";
        const myLanguageCode = "<%= languageCode %>";
    </script>
    <script src="/javascripts/room.js" type="module"></script>
    <link rel="stylesheet" href="/stylesheets/room.css">
</body>


</html>