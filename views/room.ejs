<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Monolingo</title>
    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Raleway:wght@400;500;600;700&display=swap" rel="stylesheet">
    
</head>

<body class="d-flex flex-column min-vh-100 bg-dark">
    <main class="d-flex container-fluid justify-content-center p-0 text-white">
        <div class="row container-fluid row-cols-1 row-cols-md-2 p-0" id="video-list">
            <div class="col p-0">
                <div class="card border-0">
                    <div class="card-img-overlay p-0">
                        <h5 class="title-overlay card-title p-2">
                            <%= username %> - Speaks <%= language %>
                        </h5>
                        <p class="position-absolute bottom-0 p-1" id="subtitle" style="background-color: rgba(0, 0, 0, 0.5);"></p>
                    </div>
                    <video id="videoElement" autoplay="true" style="background-color: black; width: 100%; height: auto;"></video>
                </div>
            </div>
            <div class="col waiting-for-user" id="waiting-for-user">
                <h6>Waiting for other users to join...</h6>
                <small>Invite your friend: <%= roomId %></small>
            </div>
        </div>
    </main>

    <div class="row row-cols-1 row-cols-md-2 m-3">
        <div class="col mb-3">
            <div class="text-white bg-dark">
                <div class="container my-2">
                    <h6 class="text-center">Click or Press Space to Start Speaking</h6>
                    <div class="d-flex container justify-content-center my-2">
                        <button id="record" class="btn btn-success">Start Speaking</button>
                    </div>
                    <p>Invite your friend: <%= roomId %></p>
                    <label class="form-label" for="voiceSelect">Select Translator Voice</label>
                    <select class="form-select" name="voiceSelect" id="voiceSelect">
                    </select>
                </div>
            </div>
        </div>
        <div class="col mb-3 pe-0">
            <div class="card text-white shadow" style="background-color: #133b5c;">
                <div class="card-header">
                    Messages
                </div>
                <div class="container" tabindex="0" style="overflow-y: scroll; height: 170px;" id="message-board">
                    <!-- Messages -->
                </div>
            </div>
        </div>
    </div>
    <footer class="footer py-4 mt-auto text-white">
        <div class="d-flex container justify-content-between">
            <h6>&copy; Monolingo 2021 Designed by <a class="text-white" href="https://github.com/Mohanito">Mohan Li</a></h6>
            <a class="text-white" href="/">Back to Homepage</a>
        </div>
    </footer>
    

    <script src="/socket.io/socket.io.js"></script>
    <script src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"></script>

    <script>
        const roomId = "<%= roomId %>";
        const myUsername = "<%= username %>";
        const myLanguage = "<%= language %>";
        const myLanguageCode = "<%= languageCode %>";
    </script>
    <script src="/javascripts/room.js" type="module"></script>
    <link rel="stylesheet" href="/stylesheets/room.css">
</body>


</html>